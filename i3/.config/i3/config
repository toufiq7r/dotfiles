client.focused          #83c092 #83c092 #83c092 #83c092
client.unfocused        #2b3339 #2b3339 #2b3339 #2b3339
client.focused_inactive #2b3339 #2b3339 #2b3339 #2b3339
client.placeholder #2b3339 #2b3339 #2b3339 #2b3339
client.urgent #2b3339 #BF616A #d3c6aa #BF616A

client.background       #2d353b

